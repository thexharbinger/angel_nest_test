- unless resource == current_user
  .follow_button
    = follow_button(resource)

ul.popularity_metrics
  li
    .label= t 'label.followers'
    .count= resource.followers_count
  - if resource.is_a?(User)
    li
      .label= t 'label.following'
      .count= resource.followed_count
    li
      .label= t 'label.micro_posts'
      .count= resource.micro_posts.count
  - else
    li
      .label= t 'label.comments'
      .count= resource.comments_count

.clear
